<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-6 shadow">
      <h2>Create new cocktail</h2>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit %>
      <% end %>

      <%= link_to "Back", cocktails_path %>
    </div>
  </div>
</div>
